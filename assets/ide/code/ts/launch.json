{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Server",
      "program": "${workspaceRoot}/server/src/index.ts",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/build/src/**/*"],
      "preLaunchTask": "compile_ts"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Server (attach)",
      "address": "localhost",
      "port": 9999,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Seed Data",
      "program": "${workspaceRoot}/server/src/index.ts",
      "args": ["run", "seed"],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/build/src/**/*"],
      "preLaunchTask": "compile_ts"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Quick Test",
      "program": "${workspaceRoot}/server/src/test.ts",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/build/src/**/*"],
      "preLaunchTask": "compile_ts"
    }
  ]
}
